{
  "manifest_version": 3,
  "name": "cloudskillsboost Quiz Automation",
  "version": "1.2",
  "description": "Just See the power of automation",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "run-quiz-autofill": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      },
      "description": "Autocomplete's the quiz"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "64": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": [
    "https://popup-c.netlify.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.cloudskillsboost.google/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
